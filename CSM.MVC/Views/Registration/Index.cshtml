@model RegistrationViewModel

<h1>Register Student for Course</h1>
<form asp-action="Register">
    <div class="form-group">
        <label>Select Student:</label>
        <select asp-for="SelectedStudentId" asp-items="@(new SelectList(Model.Students, "Id", "FirstName"))" class="form-control">
            <option value="">-- Select Student --</option>
        </select>
    </div>
    <div class="form-group">
        <label>Select Course:</label>
        <select asp-for="SelectedCourseId" asp-items="@(new SelectList(Model.Courses, "Id", "CourseName"))" class="form-control">
            <option value="">-- Select Course --</option>
        </select>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Register</button>
</form>


<h2>Count of Students Who Didn't Register Max Courses</h2>

<p>Total students who didn't register for the maximum number of courses: @Model.StudentsDidntRegisterMaxCoursesCount.</p>


<h2>Number of Course that still have space</h2>

<p>Total number of course that still have space: @Model.NumberOfCourseStillHaveSpace</p>

