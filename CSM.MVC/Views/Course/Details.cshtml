@model Course

<h2>Course Details</h2>

<div class="row">
    <div class="col-md-6">
        <dl>
            <dt>Course Code:</dt>
            <dd>@Model.CourseCode</dd>
            <dt>Course Name:</dt>
            <dd>@Model.CourseName</dd>
            <dt>Teacher Name:</dt>
            <dd>@Model.TeacherName</dd>
            <dt>Start Date:</dt>
            <dd>@Model.StartDate.ToShortDateString()</dd>
            <dt>End Date:</dt>
            <dd>@Model.EndDate.ToShortDateString()</dd>
            <!-- Add other course details here -->
        </dl>

        <p>
            <a asp-action="Index">Back to List</a>
        </p>
    </div>

    <div class="col-md-6">
        <h3>Registered Students</h3>
        @if (Model.Registrations.Any())
        {
            <ul>
                @foreach (var registration in Model.Registrations)
                {
                    <li>@registration.FirstName @registration.Surname</li>
                }
            </ul>
        }
        else
        {
            <p>No students registered</p>
        }
    </div>

</div>
